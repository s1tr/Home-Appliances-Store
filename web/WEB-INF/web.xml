<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>401</error-code>
        <location>/errors/error401.html</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/errors/error404.html</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/errors/error405.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errors/error500.html</location>
    </error-page>
    <servlet>
        <servlet-name>AddNewAppliances</servlet-name>
        <servlet-class>servletApp.AddNewAppliances</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>browseAppliances</servlet-name>
        <servlet-class>servletApp.browseAppliances</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFeddback</servlet-name>
        <servlet-class>servletApp.AddFeddback</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>servletApp.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servletApp.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>servletApp.register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddNewAppliances</servlet-name>
        <url-pattern>/AddNewAppliances</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>browseAppliances</servlet-name>
        <url-pattern>/browseAppliances</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFeddback</servlet-name>
        <url-pattern>/AddFeddback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
</web-app>
